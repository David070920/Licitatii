# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Application
PROJECT_NAME=Romanian Public Procurement Platform
PROJECT_DESCRIPTION=API for Romanian public procurement monitoring and transparency
VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=procurement_platform
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/procurement_platform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
ALLOWED_HOSTS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Storage
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@procurement-platform.ro
EMAILS_FROM_NAME=Romanian Procurement Platform

# External APIs
SICAP_API_URL=https://e-licitatie.ro/api
ANRMAP_API_URL=https://anrmap.gov.ro/api
EU_TED_API_URL=https://ted.europa.eu/api